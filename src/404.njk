<script>
function goToRandomLink() {
  // Random links from blogroll
  const links = [
    'https://indieweb.org',
    'https://neocities.org',
    'https://gifcities.org',
    'https://cyber.dabamos.de/88x31/',
    'https://yesterweb.org'
  ];
  const randomLink = links[Math.floor(Math.random() * links.length)];
  window.open(randomLink, '_blank');
}

// Easter egg: typing "home" takes you home
let typed = '';
document.addEventListener('keypress', function(e) {
  typed += e.key.toLowerCase();
  if (typed.includes('home')) {
    window.location.href = '/';
  }
  if (typed.length > 10) {
    typed = typed.slice(-10);
  }
});
</script>

